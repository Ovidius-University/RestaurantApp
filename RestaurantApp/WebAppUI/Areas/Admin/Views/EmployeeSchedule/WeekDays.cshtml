@model IEnumerable<ExistentWorkHourDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index of work days for the restaurant</h1>
<p>
    <a asp-action="Create" class="btn btn-sm btn-outline-success">Add an employee day schedule</a>
</p>
<div class="col-md-6">
    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartHour)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndHour)
                    </th>
                   <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartHour)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndHour)
                        </td>
                        <td>
                            <a asp-action="Index" asp-route-id="@item.Id">Employee Schedules</a> 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-danger">There is no work day for the restaurant!</p>
    }
    @await Html.PartialAsync("_MessageResponse", "MessageEmpWorkDay")
</div>