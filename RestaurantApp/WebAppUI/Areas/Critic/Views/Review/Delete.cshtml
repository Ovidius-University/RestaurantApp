@model ReviewDetailsVm

@{
    ViewData["Title"] = "Delete";
}

<h1>Are you sure you want to delete this review?</h1>
<div>
    <h4>
        <strong>Reviewer: </strong> @Html.DisplayFor(model => model.Reviewer)</h4>
    <h4>
        <strong>Food item: </strong> @Html.DisplayFor(model => model.Food)
    </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FoodId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <partial name="_BackToList" />
    </form>
</div>
