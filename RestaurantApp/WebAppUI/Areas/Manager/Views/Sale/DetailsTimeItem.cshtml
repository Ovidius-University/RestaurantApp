@model SaleTimeItemVm

@{
    ViewData["Title"] = "DetailsTimeItem";
}
@if (Model.id == 1)
{
    <h1>Sales of menu item <strong>@Html.DisplayFor(model => model.Title)</strong> in the last day</h1>
}
else if (Model.id == 2)
{
    <h1>Sales of menu item <strong>@Html.DisplayFor(model => model.Title)</strong> in the last month</h1>
}
else if (Model.id == 3)
{
    <h1>Sales of menu item <strong>@Html.DisplayFor(model => model.Title)</strong> in the last year</h1>
}

<div>
   <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Units sold:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            Profit made:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalSales) RON
        </dd>
    </dl>
</div>
<div>
    <a asp-action="DetailsTime" asp-route-id="@Model.id">Back to list</a>
</div>
