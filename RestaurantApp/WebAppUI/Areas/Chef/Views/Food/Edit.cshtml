@model FoodEditDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Editing</h1>

<h4>@Html.DisplayFor(m=>Model.ExistentFood!.Title)</h4>
<hr />
<div class="row mb-3">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExistentFood!.Id" />
            <div class="row">
                <div class="form-group mb-3">
                    <label asp-for="ExistentFood!.Title" class="control-label"></label>
                    <input asp-for="ExistentFood!.Title" class="form-control" />
                    <span asp-validation-for="ExistentFood!.Title" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ExistentFood!.Description" class="control-label"></label>
                    <input asp-for="ExistentFood!.Description" class="form-control" />
                    <span asp-validation-for="ExistentFood!.Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ExistentFood!.CategoryId" class="control-label"></label>
                    <select asp-for="ExistentFood!.CategoryId" asp-items="@ViewBag.ExistentCategories" class="form-control"></select>
                    <span asp-validation-for="ExistentFood!.CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="ExistentFood!.Price" class="control-label"></label>
                    <input asp-for="ExistentFood!.Price" class="form-control" />
                    <span asp-validation-for="ExistentFood!.Price" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="ExistentFood!.Calories" class="control-label"></label>
                    <input asp-for="ExistentFood!.Calories" class="form-control" />
                    <span asp-validation-for="ExistentFood!.Calories" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="ExistentFood!.Weight" class="control-label"></label>
                    <input asp-for="ExistentFood!.Weight" class="form-control" />
                    <span asp-validation-for="ExistentFood!.Weight" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="ExistentFood!.Stock" class="control-label"></label>
                    <input asp-for="ExistentFood!.Stock" class="form-control" />
                    <span asp-validation-for="ExistentFood!.Stock" class="text-danger"></span>
                </div>
                <div class="form-group form-check mb-3">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="ExistentFood!.IsFinal" /> @Html.DisplayNameFor(model => model.ExistentFood!.IsFinal)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h4>List of ingredients</h4>
        @if (Model.ListIngredients!.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => Model.ListIngredients.FirstOrDefault()!.Name)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListIngredients)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>                            
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-danger">There is no registered ingredient for this food item!</p>
        }
    </div>
</div>

<div>
    <partial name="_BackToList" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
