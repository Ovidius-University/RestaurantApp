@model SaleVm

@{
    ViewData["Title"] = "DetailsItem";
}

<div>
    <h1>All-time sales of the menu item <strong>@Html.DisplayFor(model => model.Title)</strong></h1>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Units sold:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            Profit made:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalSales) RON
        </dd>
    </dl>
</div>
<div>
    <partial name="_BackToList" />
</div>
