@model IEnumerable<WebAppUI.Models.ViewModels.CardProviderVm>
<article class="me-2">
    <h1>Providers</h1>
</article>
<section class="row">
    @if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            <article class="me-2 col-lg-3">
                @await Html.PartialAsync("Provider/_Card", item)
            </article>
        }
    }
    else
    {
        <article class="alert alert-warning" role="alert">There is no registered provider yet!</article>
    }
</section>