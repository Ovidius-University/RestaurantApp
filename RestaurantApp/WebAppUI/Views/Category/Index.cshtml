@model IEnumerable<WebAppUI.Models.ViewModels.CardCategoryVm>
<section class="row">
    <article class="me-2">
        <h1>Categories</h1>
    </article>
    <section class="row">
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <article class="col-4 mb-3">
                    @await Html.PartialAsync("Category/_Card", item)
                </article>
            }
        }
        else
        {
            <article class="alert alert-warning" role="alert">There is no registered food category yet!</article>
        }
    </section>
</section>