@model IngredientFoodsVm
<section class="row">
    <article class="me-2">
        <h1>@Html.DisplayFor(m => Model.IngredientDetails!.Name)</h1>
    </article>
    @if (Model.Foods!.Count() > 0)
    {
        @foreach (var item in Model.Foods!)
        {
            <article class="me-2 col-lg-3">
                @await Html.PartialAsync("Food/_Card", item)
            </article>
        }
    }
    else
    {
        <article class="alert alert-warning" role="alert">There is no food made with this ingredient yet!</article>
    }
</section>
<br />
<br />
<div>
    <partial name="_BackToList" />
</div>